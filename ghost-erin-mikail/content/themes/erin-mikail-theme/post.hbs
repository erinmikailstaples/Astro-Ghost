---
import Layout from '../layouts/Layout.astro';
---
<Layout>
    <article class="browser-window post">
        <div class="browser-bar">
            <div class="browser-buttons">
                <div class="browser-button"></div>
                <div class="browser-button"></div>
                <div class="browser-button"></div>
            </div>
            <span>{{title}}</span>
        </div>
        <div class="browser-content">
            <header class="post-header">
                <h1>{{title}}</h1>
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </header>
            <section class="post-content">
                {{content}}
            </section>
        </div>
    </article>
</Layout>

<style lang="scss">
    .post {
        max-width: 720px;
        margin: 0 auto;
    }
    .post-header {
        text-align: center;
        margin-bottom: 2rem;
    }
</style>
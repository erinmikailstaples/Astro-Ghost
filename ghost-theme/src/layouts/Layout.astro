---
import '@fontsource/comic-neue';
import '@fontsource/vt323';
import '../styles/global.css';
import AboutMe from '../components/AboutMe.astro';
import TopArticles from '../components/TopArticles.astro';

const { title, site } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <!-- Replace ghost_head with appropriate meta tags or SEO component -->
    <style is:global>
        /* Your existing styles here */
    </style>
</head>
<body>
    <header>
        <h1>{site.title}</h1>
        <nav>
            <!-- Replace with your navigation component or logic -->
        </nav>
    </header>
    <AboutMe />
    <TopArticles />
    <main>
        <slot />
    </main>
    <footer>
        &copy; {new Date().getFullYear()} {site.title}
    </footer>
    <!-- Replace ghost_foot with appropriate scripts or components -->
</body>
</html>